<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/failure_layout"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/failure_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_failure_network" />

    <TextView
        android:id="@+id/failure_tip_tv"
        fontPath="fonts/Cartoon.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/smart_net_failure_tip"
        android:textColor="#ff666666"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/failure_try_tv"
        fontPath="fonts/Cartoon.ttf"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_smart_failure"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/smart_click_try"
        android:textColor="#ffffffff"
        android:textSize="17sp" />

</LinearLayout>