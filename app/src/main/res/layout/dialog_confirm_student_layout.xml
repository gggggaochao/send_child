<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_select_student"
    android:paddingTop="52dp"
    android:paddingBottom="43dp"
    android:paddingLeft="22dp"
    android:paddingRight="22dp">

    <TextView
        android:id="@+id/tv_confirm_student_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff333333"
        android:textSize="21dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_confirm_student_cancel"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_dialog_cancel"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#ffb2c514"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/tv_confirm_student_confirm"
            android:layout_marginLeft="80dp"
            android:gravity="center"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_dialog_confirm"
            android:text="@string/confirm"
            android:textColor="#fffffffe"
            android:textSize="23dp" />
    </LinearLayout>


</LinearLayout>