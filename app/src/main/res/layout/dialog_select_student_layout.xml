<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_dialog_select_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:paddingLeft="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@mipmap/ic_close_dialog"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_select_student"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="41dp"
            android:paddingRight="12dp"
            android:paddingBottom="23dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_pick_up_status"
                android:layout_width="275dp"
                android:layout_height="45dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_dialog_confirm"
                android:gravity="center"
                android:text="@string/sign_in"
                android:textColor="#ffffffff"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

