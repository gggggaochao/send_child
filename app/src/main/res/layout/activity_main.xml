<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_head_layout_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.23"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_default_header" />

        <ImageView
            android:id="@+id/iv_mid_layout_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.77"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_default_mid" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="19">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="18dp">

                <ImageView
                    android:id="@+id/iv_school_logo"
                    android:layout_width="@dimen/log_width"
                    android:layout_height="@dimen/log_height"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_calendar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@+id/iv_school_logo"
                    tools:ignore="MissingConstraints">

                    <TextClock
                        android:id="@+id/textClock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:format12Hour="HH:mm"
                        android:format24Hour="HH:mm"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="48dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_date_show"
                        app:layout_constraintTop_toTopOf="@+id/tv_lunar_calendar" />

                    <TextView
                        android:id="@+id/tv_lunar_calendar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="21dp"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        app:layout_constraintLeft_toRightOf="@+id/textClock" />

                    <TextView
                        android:id="@+id/tv_date_show"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        app:layout_constraintLeft_toLeftOf="@+id/tv_lunar_calendar"
                        app:layout_constraintTop_toBottomOf="@+id/tv_lunar_calendar" />

                    <TextView
                        android:id="@+id/tv_holiday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_date_show"
                        app:layout_constraintLeft_toRightOf="@+id/tv_date_show"
                        app:layout_constraintTop_toTopOf="@+id/tv_date_show" />

                </android.support.constraint.ConstraintLayout>


                <LinearLayout
                    android:id="@+id/ll_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_temperature"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="55dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_weather"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:src="@mipmap/ic_duoyun" />

                            <TextView
                                android:id="@+id/tv_weather"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="15dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_air_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_notice"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    fontPath="fonts/Cartoon.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通告："
                    android:textColor="#ff82cb0e"
                    android:textSize="18dp" />

                <ViewFlipper
                    android:id="@+id/notice_flipper"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_horn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:src="@drawable/bg_horn" />


            </LinearLayout>

        </RelativeLayout>

        <viroyal.com.base.widget.FilletLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="25">
            <!--轮播-->
            <viroyal.com.dev.broadcast.BroadcastView
                android:id="@+id/bcv_broadcast"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </viroyal.com.base.widget.FilletLinearLayout>


        <!--菜谱-->
        <viroyal.com.base.widget.FilletLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="13dp"
            android:layout_weight="24"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_food_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/food_title_height"
                android:background="@mipmap/bg_food_header"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_week"
                    fontPath="fonts/Cartoon.ttf"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/week"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    fontPath="fonts/Cartoon.ttf"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="@string/week_food_list"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_empty_food"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/no_data"
                    android:textSize="@dimen/text_size_xxl"
                    android:visibility="gone" />

                <com.github.demono.AutoScrollViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:stopWhenTouch="true"
                    app:slideDirection="right"
                    app:cycle="true"/>

            </FrameLayout>

        </viroyal.com.base.widget.FilletLinearLayout>

        <!--人脸、刷卡、二维码-->
        <viroyal.com.base.widget.FilletLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="13dp"
            android:layout_weight="20"
            android:background="@mipmap/bg_face"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <!--人脸识别-->
            <RelativeLayout
                android:id="@+id/rl_camera"
                android:layout_width="100dp"
                android:layout_height="100dp">

                <com.aiwinn.base.widget.CameraSurfaceView
                    android:id="@+id/sv_camera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shape_face_recognition"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/bg_face_recognition" />

                <ImageView
                    android:id="@+id/iv_face"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shape_face_recognition"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/face" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvDetectedUsers"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_camera_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_debug_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_camera_message"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_camera_debug_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_debug_msg"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

            </RelativeLayout>

            <!--刷卡处理-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_swipe_status"
                    fontPath="fonts/Cartoon.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22"
                    android:orientation="horizontal">

                    <TextView
                        fontPath="fonts/Cartoon.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卡号："
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_card_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22"
                    android:orientation="horizontal">

                    <TextView
                        fontPath="fonts/Cartoon.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学号："
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_union_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22"
                    android:orientation="horizontal">

                    <TextView
                        fontPath="fonts/Cartoon.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名："
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_qr_code"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/load_fail_qr_code" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/weixin_scan"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </LinearLayout>

        </viroyal.com.base.widget.FilletLinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_sort_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:fadingEdge="none" />
    </LinearLayout>

    <com.wonderkiln.camerakit.CameraView
        android:id="@+id/cameraKitView"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp"
        app:ckFacing="back"
        app:ckFlash="off"
        app:ckMethod="still"
        app:ckDoubleTapToToggleFacing="false"
        app:ckJpegQuality="100"
        android:adjustViewBounds="true" />

</FrameLayout>
